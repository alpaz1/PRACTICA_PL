enum DiaSemana {
    Lunes,
    Martes,
    Miercoles,
    Jueves,
    Viernes,
    Sabado,
    Domingo,
    Error
};
DiaSemana AveriguaDia ( e n t e r o n ) {
    selecciona (n) {
        caso 1 : devuelve Lunes;
        caso 2 : devuelve Martes;
        caso 3: devuelve Miercoles;
        caso 4 : devuelve Jueves;
        caso 5: devuelve Viernes;
        caso 6 : devuelve Sabado;
        caso 7 : devuelve Domingo;
        por Defecto : devuelveError; // en caso de un numero invalido , se devuelve
    }
}
vacio principal () {
    entero n = Lee("Ingrese un numero del 1 al 7");
    DiaSemana dia = AveriguaDia(n);
    imprime(dia);
    devuelve;
}